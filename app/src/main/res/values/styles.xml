<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#FF9800</item>
        <!-- Primary dark theme color of the app (sets color of status bar) -->
        <item name="colorPrimaryDark">#FB8C00</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#a3bf00</item>
    </style>

    <style name="ScoreButtonsStyle">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">@dimen/layout_marginLeft_marginRight</item>
        <item name="android:layout_marginRight">@dimen/layout_marginLeft_marginRight</item>
    </style>

    <style name="TeamNameStyle">
        <item name="android:padding">@dimen/padding</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TeamScoresStyle">
        <item name="android:paddingBottom">@dimen/paddingBottom</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
